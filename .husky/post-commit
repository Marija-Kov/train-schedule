#!/bin/bash

get_stash_index() {
    local stash_name="$1"
    git stash list | grep "$stash_name" | awk '{print $1}' | sed 's/stash@{//;s/}//;s/:$//'
}

unstaged_stash_index=$(get_stash_index "unstaged")

if [ "$unstaged_stash_index" = "0" ]; then
    git stash pop
else
    echo "No unstaged changes were stashed pre-commit, nothing to pop."
fi